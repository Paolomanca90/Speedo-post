@model U4_W5_D1_5.Models.Azienda

@{
    ViewBag.Title = "EditAzienda";
    TempData["IdAzienda"] = ViewContext.RouteData.Values["Id"];
}

<h2 class="text-center p-4">Modifca Anagrafica</h2>

@if (ViewBag.MessaggioErrore != null)
{
    <div class="alert alert-success w-25 mx-auto text-center m-4">ViewBag.MessaggioErrore</div>
}

<div class="d-flex min-vh-100 d-flex">
    <div class="w-50 mx-auto pt-5">
        <img src="~/Content/Img/update1.svg" alt="new_customer" class="w-100" />
    </div>
    <div class="w-50 p-5 text-center">
        @using (Html.BeginForm("EditAzienda", "Clienti", FormMethod.Post, new { @class = "w-100" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="p-4 border border-2 border-success mx-auto rounded-4" style="background: lightgreen">
                <div class="form-group text-center mb-3">
                    @Html.LabelFor(model => model.RagioneSociale, htmlAttributes: new { @class = "control-label d-block pb-2 text-white fw-bold fs-4" })
                    <div class="d-flex justify-content-center">
                        @Html.EditorFor(model => model.RagioneSociale, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.RagioneSociale, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group text-center mb-4">
                    @Html.LabelFor(model => model.PartitaIva, htmlAttributes: new { @class = "control-label d-block pb-2 text-white fw-bold fs-4" })
                    <div class="d-flex justify-content-center">
                        @Html.EditorFor(model => model.PartitaIva, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PartitaIva, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group text-center mb-4">
                    @Html.LabelFor(model => model.Sede, htmlAttributes: new { @class = "control-label d-block pb-2 text-white fw-bold fs-4" })
                    <div class="d-flex justify-content-center">
                        @Html.EditorFor(model => model.Sede, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Sede, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group text-center mb-4">
                    @Html.LabelFor(model => model.Citta, htmlAttributes: new { @class = "control-label d-block pb-2 text-white fw-bold fs-4" })
                    <div class="d-flex justify-content-center">
                        @Html.EditorFor(model => model.Citta, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Citta, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="text-center">
                        <input type="submit" value="Registra" class="btn btn-success w-50 text-white fw-bold fs-4" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

