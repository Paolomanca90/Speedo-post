@model U4_W5_D1_5.Models.SpedizioneAzienda

@{
    ViewBag.Title = "AddSpedizioneAzienda";
}

<div class="d-flex min-vh-100">
    <div class="w-50 mx-auto pt-5 mt-5">
        <img src="~/Content/Img/drone.svg" alt="new_customer" class="w-100" />
    </div>
    <div class="w-50 p-5 text-center">
        <div>
            <button class="btn btn-success rounded-2 fw-bold w-50 py-3 fs-4" id="SpedizioneAzienda">Spedizione aziende</button>
        </div>
        <div style="display:none" id="formSpedizioneAzienda">
            @using (Html.BeginForm("AddSpedizioneAzienda", "Clienti", FormMethod.Post, new { @class = "w-100 mt-5" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="p-4 border border-2 border-success mx-auto rounded-4" style="background: lightgreen">
                    <div class="form-group text-center mb-3">
                        @Html.LabelFor(model => model.Azienda, htmlAttributes: new { @class = "control-label d-block pb-2 text-white fw-bold fs-4" })
                        <div class="d-flex justify-content-center">
                            @Html.DropDownListFor(model => model.Azienda, new SelectList(ViewBag.AnagraficaAziende, "Value", "Text"), "- Seleziona Cliente -", new { @class = "form-control text-center" })
                            @Html.ValidationMessageFor(model => model.Azienda, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group text-center mb-4">
                        @Html.LabelFor(model => model.NomeDestinatario, htmlAttributes: new { @class = "control-label d-block pb-2 text-white fw-bold fs-4" })
                        <div class="d-flex justify-content-center">
                            @Html.EditorFor(model => model.NomeDestinatario, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NomeDestinatario, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group text-center mb-4">
                        @Html.LabelFor(model => model.CognomeDestinatario, htmlAttributes: new { @class = "control-label d-block pb-2 text-white fw-bold fs-4" })
                        <div class="d-flex justify-content-center">
                            @Html.EditorFor(model => model.CognomeDestinatario, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CognomeDestinatario, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group text-center mb-4">
                        @Html.LabelFor(model => model.IndirizzoDestinatario, htmlAttributes: new { @class = "control-label d-block pb-2 text-white fw-bold fs-4" })
                        <div class="d-flex justify-content-center">
                            @Html.EditorFor(model => model.IndirizzoDestinatario, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.IndirizzoDestinatario, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group text-center mb-4">
                        @Html.LabelFor(model => model.CittaDestinatario, htmlAttributes: new { @class = "control-label d-block pb-2 text-white fw-bold fs-4" })
                        <div class="d-flex justify-content-center">
                            @Html.EditorFor(model => model.CittaDestinatario, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CittaDestinatario, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group text-center mb-4">
                        @Html.LabelFor(model => model.Peso, htmlAttributes: new { @class = "control-label d-block pb-2 text-white fw-bold fs-4" })
                        <div class="d-flex justify-content-center">
                            @Html.EditorFor(model => model.Peso, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Peso, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group text-center mb-4">
                        @Html.LabelFor(model => model.DataSpedizione, htmlAttributes: new { @class = "control-label d-block pb-2 text-white fw-bold fs-4" })
                        <div class="d-flex justify-content-center">
                            @Html.EditorFor(model => model.DataSpedizione, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                            @Html.ValidationMessageFor(model => model.DataSpedizione, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group text-center mb-4">
                        @Html.LabelFor(model => model.dataConsegna, htmlAttributes: new { @class = "control-label d-block pb-2 text-white fw-bold fs-4" })
                        <div class="d-flex justify-content-center">
                            @Html.EditorFor(model => model.dataConsegna, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                            @Html.ValidationMessageFor(model => model.dataConsegna, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="text-center">
                            <input type="submit" value="Registra" class="btn btn-success w-50 text-white fw-bold fs-4" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/JavaScriptCustom.js"></script>
}

