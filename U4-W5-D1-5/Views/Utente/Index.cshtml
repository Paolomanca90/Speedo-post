@model U4_W5_D1_5.Models.Utente

@{
    ViewBag.Title = "Index";
}

<h1 class="text-center p-4"><strong>SpeedoLogistica</strong> sempre al tuo fianco</h1>

@if (TempData["Messaggio"] != null)
{
    <div class="alert alert-danger w-25 mx-auto text-center m-4">@TempData["Messaggio"]</div>
}

<div style="background-image: url('https://speedoexpress.com/wp-content/uploads/2022/08/istockphoto-1180702558-612x612-1.jpg'); background-position:center; background-repeat: no-repeat; background-size:cover" class="min-vh-100 d-flex justify-content-center align-items-center">
    @using (Html.BeginForm("Login", "Utente", FormMethod.Post, new { @class = "w-50"}))
    {
        @Html.AntiForgeryToken()
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="p-4 border border-2 border-success mx-auto rounded-4" style="background: lightgreen">
            <h2 class="text-center text-success pb-3 fs-1">Effettua il login</h2>
            <div class="form-group text-center mb-3">
                @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label d-block pb-2 text-white fw-bold fs-4" })
                <div class="d-flex justify-content-center">
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control"} })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group text-center mb-4">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label d-block pb-2 text-white fw-bold fs-4" })
                <div class="d-flex justify-content-center">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="text-center">
                    <input type="submit" value="Accedi" class="btn btn-success w-50 text-white fw-bold fs-4" />
                </div>
            </div>
        </div>
    }
</div>

